<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdaugaPostareActivity"
    android:background="@drawable/gradient">


    <Button
        android:id="@+id/postare_noua_btn_adauga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/slogan"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/farsan2"
        android:text="Adaugă"
        android:textColor="@color/niceColor"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@id/postare_noua_btn_anuleaza"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/postare_noua_btn_anuleaza"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/niceColor"
        android:clickable="true"
        android:focusable="true"
        android:fontFamily="@font/farsan2"
        android:text="Anulează"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/postare_noua_btn_adauga" />

    <EditText
        android:id="@+id/postare_noua_continut"
        android:layout_width="0dp"
        android:layout_height="150dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="136dp"
        android:layout_marginEnd="30dp"
        android:background="@drawable/rounded_textview"
        android:fontFamily="@font/farsan2"
        android:hint="La ce te gândești?"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        android:textColor="@color/negru"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/postare_noua_poza"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:layout_marginStart="90dp"
        android:layout_marginTop="352dp"
        android:layout_marginEnd="90dp"
        android:clickable="true"
        android:focusable="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/postare_noua_tv_poza"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/farsan2"
        android:text="Adaugă poză"
        android:textColor="@color/alb"
        android:textSize="22sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/postare_noua_continut" />
</android.support.constraint.ConstraintLayout>