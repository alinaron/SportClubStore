<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ErrorActivity"
    android:background="@drawable/gradient">

    <TextView
        android:id="@+id/eroare_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="400dp"
        android:layout_marginTop="160dp"
        android:layout_marginEnd="400dp"
        android:fontFamily="@font/farsan2"
        android:text="Verificati conexiunea la internet!"
        android:textColor="@color/alb"
        android:textSize="26sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/eroare_img"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginStart="400dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="400dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/eroare_tv"
        app:srcCompat="@drawable/no_wifi" />
</android.support.constraint.ConstraintLayout>