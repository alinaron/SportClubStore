<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyStats"
    android:background="@color/colorAccent">
    <TextView
        android:id="@+id/stats_tv_postari"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="300dp"
        android:fontFamily="@font/farsan2"
        android:textColor="@color/negru"
        android:textSize="19sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/stats_comenzi"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="300dp"
        android:layout_marginTop="23dp"
        android:layout_marginEnd="300dp"
        android:fontFamily="@font/farsan2"
        android:textColor="@color/negru"
        android:textSize="19sp"
        android:textAlignment="center"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/stats_chart_postari" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/stats_chart_postari"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/stats_tv_postari">

    </com.github.mikephil.charting.charts.BarChart>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/stats_chart_comenzi"
        android:layout_width="match_parent"
        android:layout_height="330dp"
        android:layout_marginTop="9dp"
        app:layout_constraintTop_toBottomOf="@+id/stats_comenzi">

    </com.github.mikephil.charting.charts.BarChart>

</android.support.constraint.ConstraintLayout>