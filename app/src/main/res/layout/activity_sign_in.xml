<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/real_deal"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInActivity"
    android:background="@drawable/gradient"
    android:textAlignment="center"
    xmlns:card_view="http://schemas.android.com/apk/res-auto">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/frame_sign_in"
        android:layout_marginStart="200dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="200dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        >

    <android.support.v7.widget.CardView
        android:id="@+id/card_view_sign_in"
        android:layout_width="100dp"
        android:layout_height="100dp"
        card_view:cardCornerRadius="50dp"
        card_view:cardPreventCornerOverlap="false"
        >

            <ImageView
                android:id="@+id/sign_in_image_profile_pic"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                app:srcCompat="@drawable/loginhea2d" />


    </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="34dp"
            android:layout_height="34dp"
            card_view:cardCornerRadius="17dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            card_view:cardPreventCornerOverlap="false"
            android:id="@+id/card_view_sign_in_plus"
            >

            <ImageView
                android:id="@+id/sign_in_plus_image"
                android:layout_width="34dp"
                android:layout_height="34dp"
                app:srcCompat="@drawable/plus" />

        </android.support.v7.widget.CardView>

    </RelativeLayout>
    <EditText
        android:id="@+id/sign_in_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:inputType="textEmailAddress"
        android:digits="1234567890ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz._-"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        android:hint="Username *"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/frame_sign_in" />

    <EditText
        android:id="@+id/sign_in_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:hint="Parolă *"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_username" />

    <EditText
        android:id="@+id/sign_in_password_confirm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:hint="Confirmă parola *"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_password" />

    <EditText
        android:id="@+id/sign_in_nume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:hint="Nume de familie *"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_password_confirm" />

    <EditText
        android:id="@+id/sign_in_prenume"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:digits=" ABCDEFGHIJKLMNOPQRSTUVWXYZabcdefghijklmnopqrstuvwxyz-"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:hint="Prenume *"
        android:inputType="textPersonName"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_nume" />

    <EditText
        android:id="@+id/sign_in_telefon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:hint="Telefon *"
        android:inputType="phone"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_prenume" />

    <TextView
        android:id="@+id/sign_in_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:clickable="true"
        android:ems="12"
        android:fontFamily="@font/farsan2"
        android:hint="Data nașterii *"
        android:textAlignment="center"
        android:textColor="@color/slogan"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_telefon" />

    <TextView
        android:id="@+id/sign_in_tv_sport"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="410dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="400dp"
        android:fontFamily="@font/farsan2"
        android:text="Sport practicat *"
        android:textColor="@color/alb"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/sign_in_data" />

    <Spinner
        android:id="@+id/spinner_sport"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@color/alb"
        android:popupBackground="@color/splash"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_sport" />

    <RadioGroup
        android:id="@+id/sign_in_rg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginEnd="100dp"
        android:orientation="horizontal"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_tv_sex">

        <RadioButton
            android:id="@+id/sign_in_sex_m"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/farsan2"
            android:text="M"
            android:textColor="@color/alb"
            android:textSize="20sp" />

        <RadioButton
            android:id="@+id/sign_in_sex_f"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:fontFamily="@font/farsan2"
            android:text="F"
            android:textColor="@color/alb"
            android:textSize="20sp" />

    </RadioGroup>

    <EditText
        android:id="@+id/sign_in_bio"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="100dp"
        android:background="@drawable/rounded_edittext"
        android:ems="14"
        android:fontFamily="@font/farsan2"
        android:hint="Bio"
        android:inputType="textMultiLine"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/sign_in_rg" />

        <Button
            android:id="@+id/sign_in_next"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="60dp"
            android:backgroundTint="@color/slogan"
            android:fontFamily="@font/farsan2"
            android:text="Salvează și mergi mai departe  "
            android:textAlignment="center"
            android:textColor="@color/niceColor"
            android:textSize="18sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/sign_in_bio" />

    <TextView
        android:id="@+id/sign_in_tv_sex"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="410dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="400dp"
        android:fontFamily="@font/farsan2"
        android:text="Sex *"
        android:textColor="@color/alb"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/spinner_sport" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>