<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginTop="2dp"
        android:layout_marginRight="5dp"
        app:cardCornerRadius="13dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp">

            <ImageView
                android:id="@+id/cos_cumparaturi_poza"
                android:layout_width="90dp"
                android:layout_height="90dp"
                android:padding="4dp" />

            <TextView
                android:id="@+id/cos_cumparaturi_descriere"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginTop="15dp"
                android:layout_toEndOf="@id/cos_cumparaturi_poza"
                android:fontFamily="@font/farsan2"
                android:text="Apple MacBook Air Core i5 5th Gen - (8 GB/128 GB SSD/Mac OS Sierra)"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
                android:textColor="#000000"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/cos_cumparaturi_pret"
                android:layout_width="218dp"
                android:layout_height="wrap_content"
                android:layout_below="@id/cos_cumparaturi_descriere"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@id/cos_cumparaturi_poza"
                android:fontFamily="@font/farsan2"
                android:text="INR 56990"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/cos_cumparaturi_del"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="5dp"
                android:layout_marginTop="24dp"
                android:layout_toEndOf="@id/cos_cumparaturi_pret"
                android:src="@drawable/stergere" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>
</LinearLayout>