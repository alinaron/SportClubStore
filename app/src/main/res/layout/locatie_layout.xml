<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient">
    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


    <android.support.v7.widget.CardView
        android:id="@+id/locatie_card_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="200dp"
        card_view:cardCornerRadius="70dp"
        card_view:cardPreventCornerOverlap="false"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/locatie_poza"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:layout_gravity="center" />
    </android.support.v7.widget.CardView>

    <TextView
        android:id="@+id/locatie_denumire_locatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/farsan2"
        android:textColor="@color/alb"
        android:textSize="30sp"
        android:textStyle="bold"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        android:textAlignment="center"
        card_view:layout_constraintTop_toBottomOf="@+id/locatie_card_view" />

    <TextView
        android:id="@+id/locatie_descriere_locatie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="200dp"
        android:fontFamily="@font/farsan2"
        android:textColor="@color/alb"
        android:textSize="16sp"
        android:textAlignment="center"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/locatie_denumire_locatie" />

    <TextView
        android:id="@+id/locatie_tarif"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="194dp"
        android:fontFamily="@font/farsan2"
        android:textColor="@color/alb"
        android:textSize="18sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/locatie_descriere_locatie" />

    <TextView
        android:id="@+id/locatie_adresa"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="200dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="194dp"
        android:textAlignment="center"
        android:gravity="center"
        android:fontFamily="@font/farsan2"
        android:textColor="@color/alb"
        android:textSize="18sp"
        card_view:layout_constraintEnd_toEndOf="parent"
        card_view:layout_constraintStart_toStartOf="parent"
        card_view:layout_constraintTop_toBottomOf="@+id/locatie_tarif" />

        <Button
            android:id="@+id/locatie_adauga"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:backgroundTint="@color/slogan"
            android:fontFamily="@font/farsan2"
            android:text="ADAUGÄƒ LA FAVORITE"
            android:textAlignment="center"
            android:textColor="@color/niceColor"
            android:textSize="18sp"
            card_view:layout_constraintEnd_toEndOf="parent"
            card_view:layout_constraintStart_toStartOf="parent"
            card_view:layout_constraintTop_toBottomOf="@id/locatie_adresa" />
    </android.support.constraint.ConstraintLayout>
</ScrollView>