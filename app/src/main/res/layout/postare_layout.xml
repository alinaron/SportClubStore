<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.CardView
                android:id="@+id/postare_card_view_poza_profil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="19dp"
                android:layout_marginTop="5dp"
                card_view:cardCornerRadius="20dp"
                card_view:cardPreventCornerOverlap="false">

                <ImageView
                    android:id="@+id/postare_poza_profil"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_alignTop="@+id/postare_card_view_poza_profil"
                    android:layout_gravity="center" />

            </android.support.v7.widget.CardView>

            <TextView
                android:id="@+id/postare_tv_username"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignTop="@+id/postare_card_view_poza_profil"
                android:layout_alignParentStart="true"
                android:layout_marginStart="72dp"
                android:layout_marginTop="8dp"
                android:fontFamily="@font/farsan2"
                android:text="username"
                android:textColor="@color/slogan"
                android:textSize="18sp" />

            <android.support.v7.widget.CardView
                android:id="@+id/postare_card_view_poza"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/postare_card_view_poza_profil"
                android:layout_alignParentStart="true"
                android:layout_marginStart="0dp"
                android:layout_marginTop="4dp"
                card_view:cardPreventCornerOverlap="false">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:id="@+id/postare_poza"
                        android:layout_width="280dp"
                        android:layout_height="280dp"
                        android:layout_gravity="center"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="50dp"
                        android:layout_marginRight="50dp"
                        android:layout_marginBottom="5dp" />

                    <TextView
                        android:id="@+id/postare_tv_continut"
                        android:layout_width="370dp"
                        android:layout_height="wrap_content"
                        android:textAlignment="center"
                        android:layout_below="@+id/postare_poza"
                        android:layout_marginStart="15dp"
                        android:layout_marginEnd="15dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="2dp"
                        android:fontFamily="@font/farsan2"
                        android:text="conÈ›inut"
                        android:textColor="@color/slogan"
                        android:textSize="18sp" />
                </RelativeLayout>


            </android.support.v7.widget.CardView>
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>